<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>


<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coursework.controller.StartController">
   <children>
      <HBox alignment="TOP_CENTER" prefHeight="0.0" prefWidth="221.0">
         <children>
            <Label text="Онлайн-магазин">
               <font>
                  <Font name="System Bold Italic" size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <TextField fx:id="login" promptText="Логин пользвователя">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <font>
            <Font size="13.0" />
         </font>
      </TextField>
      <PasswordField fx:id="pass" promptText="Пароль пользователя">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <font>
            <Font size="13.0" />
         </font>
      </PasswordField>
      <HBox alignment="BOTTOM_RIGHT" prefHeight="0.0" prefWidth="221.0">
         <children>
            <Button fx:id="enter" mnemonicParsing="false" prefHeight="30.0" prefWidth="82.0" text="Войти">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <Label fx:id="error" text="Ошибка введённых данный. Попробуйте снова." textFill="RED" visible="false">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</VBox>
